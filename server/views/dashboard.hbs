<p class="intro">Welcome back, {{user.name}}!</p>


<div class="hashes-wrapper">
	<div id="hashtory">
		<form>
			<input id="hashtag-name" name="tag" placeholder="#hashtag"/>
			<button type="button" id="get-tweets-button">Submit</button>
		</form>
		<button type="button" id="off-canvas-toggle">&lt; See Hashtory</button>
		<div class="off-canvas">
			<h3>Saved</h3>
			<ul id="sortable">
				{{#each user.savedHashtags}}
					<li class="taglist ui-state-default" id="{{this._id}}"><a href="#">{{this.name}}</a></li>
				{{/each}}
			</ul>
			<h3>Hashtory</h3>
			<ul>
				{{#each user.hashtags}}
					<li class="taglist ui-state-default" id="{{this._id}}"><a href="#">{{this.name}}</a></li>
				{{/each}}
			</ul>
		</div>
	</div>

	<div class="masonry-grid">
	  <div class="grid-sizer"></div>
	</div>
</div>